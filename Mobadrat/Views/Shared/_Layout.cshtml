@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor Accessor

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>برنامج المبادرات</title>
	<link href="~/images/favicon.png" rel="shortcut icon" type="image/x-icon" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/masterpage.css" />
	<link href="https://fonts.googleapis.com/css2?family=Alexandria" rel="stylesheet">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<link href="~/css/menu.css" rel="stylesheet" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.css" />
	<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert-dev.js"></script>
	<link href="~/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />

	<script src="~/lib/jquery/dist/jquery.min.js"></script>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.1/js/select2.min.js"></script>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.1/css/select2.min.css" />
	<link href="~/css/swal-alert.css" rel="stylesheet" />
	<link rel="stylesheet" href="~/css/fonts.css" rel="stylesheet" />
</head>
<body>
	<div class="content">
		<header>
			<div class="container-fluid uper-bar">
				<div class="row">
					<div class="nav-bar col-lg-6 col-12">
						<i class="fa-regular fa-face-grin"></i><span>مرحبا</span> <i class="fa fa-smile-o" aria-hidden="true"></i>
						<Label class="fullname">@Accessor.HttpContext.Session.GetString("UserFullname")</Label>
					</div>
					<div class="nav-bar date-div col-lg-6 col-12">
						<span id="today" class="datespan"></span>
					</div>
				</div>
			</div>

		</header>
		<div class="container-fluid">
			<div class="row">
				<div class="col-12 col-lg-2 main-content">
					<div class="nav-side-menu">
						<div class="brand">نظام المبادرات</div>
						<i class="fa fa-bars fa-2x toggle-btn" data-toggle="collapse" data-target="#menu-content"></i>

						<div class="menu-list">

							<ul id="menu-content" class="menu-content collapse out active">
								@if (ViewBag.UserType == 1)
								{
									<li><a asp-action="Index" asp-controller="Home"><i class="fa fa-home" aria-hidden="true"></i> الرئيسية</a></li>
								}


								<li data-toggle="collapse" data-target="#mobadrat" class="collapsed">
									<a><i class="fa fa-database" aria-hidden="true"></i> مبادرات<span class="arrow"></span></a>
									<ul class="sub-menu collapse" id="mobadrat">
										@if (ViewBag.UserType == 3)
										{
											<li><a asp-action="Index" asp-controller="Mobadra"><i class="fa fa-table" aria-hidden="true"></i>مبادراتي</a></li>
										}
										else if (ViewBag.UserType == 2)
										{
											<li><a asp-action="Index" asp-controller="MobadratFollow"><i class="fa fa-table" aria-hidden="true"></i>متابعة المبادرات</a></li>
										}
									</ul>
								</li>


								<li data-toggle="collapse" data-target="#perrmission" class="collapsed">
									<a><i class="fa fa-users" aria-hidden="true"></i>  الملف الشخصي<span class="arrow"></span></a>
									<ul class="sub-menu collapse" id="perrmission">
										<li><a asp-action="Index" asp-controller="Info"><i class="fa fa-user-secret" aria-hidden="true"></i> بياناتي</a></li>
										<li><a asp-action="Index" asp-controller="NewPassword"><i class="fa fa-key" aria-hidden="true"></i> تغيير كلمة المرور</a></li>
									</ul>
								</li>


								@*<li data-toggle="collapse" data-target="#reports" class="collapsed">
								<i class="fa fa-folder" aria-hidden="true"></i><a>تقارير<span class="arrow"></span></a>
								<ul class="sub-menu collapse" id="reports">
								<li><a><i class="fa fa-file-pdf-o" aria-hidden="true"></i> تقرير 1</a></li>
								</ul>
								</li>*@

								<li>
									<a asp-action="Index" asp-controller="/Login"><i class="fa fa-power-off" aria-hidden="true"></i> خروج</a>
								</li>
							</ul>
						</div>
					</div>
				</div>
				<div class="col-12 col-lg-10 main-content">
					@RenderBody()
				</div>
			</div>
		</div>
	</div>
	<div class="form-slider" tabindex="-1" id="form-div">
		<div class="div-body">
		</div>
	</div>

	<div class="modal fade" tabindex="-1" role="dialog" id="form-modal">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title"></h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
				</div>
			</div>
		</div>
	</div>

	<footer class="footer">
		&copy; 2023 - برمجة وتصميم الإدارة العامة لتقنية المعلومات
	</footer>
	<script src="~/js/bootstrap-hijri-datepicker.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	@*<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.5.3/js/bootstrap.min.js"></script>*@
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
